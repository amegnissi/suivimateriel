{% block title %}Evenements{% endblock %}

{% block body %}
    <h1>Evenements</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ evenement.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
