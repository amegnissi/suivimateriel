{% extends 'base.html.twig' %}

{% block title %}Sociétés Services{% endblock %}

{% block breadcrumb %}SOCIETES SERVICES{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Gestion des Sociétés de Services</h4>
                <a href="{{ path('societe_service_create') }}" class="btn btn-primary">Ajouter une Société de Service</a>
            </div>

            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Liste des Sociétés de Services</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">N°</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Adresse</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Téléphone</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for societe in societes %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ societe.nom }}</td>
                                        <td>{{ societe.adresse }}</td>
                                        <td>{{ societe.telephone }}</td>
                                        <td>{{ societe.email }}</td>
                                        <td class="align-middle">
                                            <a href="{{ path('societe_service_show', { 'id': societe.id }) }}" class="btn btn-info btn-sm">Voir</a>
                                            <a href="{{ path('societe_service_edit', { 'id': societe.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                                            <form action="{{ path('societe_service_delete', { 'id': societe.id }) }}" method="POST" class="d-inline">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ societe.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette société ?');">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucune société de service trouvée.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
{% endblock %}