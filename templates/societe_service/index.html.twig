{% extends 'base_table.html.twig' %}

{% block title %}Sociétés Services{% endblock %}

{% block breadcrumb %}SOCIETES SERVICES{% endblock %}
{% block  breadcrumb_item %}SOCIETES SERVICES{% endblock %}
{% block  breadcrumb_t %} Liste des Sociétés Services{% endblock %}
{% block table_titre %}Liste des Sociétés Services{% endblock %}
 {% block btntitle %}Ajouter une Société de Servicel{% endblock %}
{% block btnpath %}{{ path('societe_service_create') }}{% endblock %}
{% block tableContent %}
    <thead>
    <tr>
        <th class="col">N°</th>
        <th class="col">Nom</th>
        <th class="col">Adresse</th>
        <th class="col">Téléphone</th>
        <th class="col">Matériels Associés</th>
        <th class="col">Actions</th>
    </thead>
    <tbody>
    {% for societe in pagination %}
        <tr>
            <td class="align-middle text-center text-xs font-weight-bold">{{ loop.index }}</td>
            <td class="">{{ societe.nom }}</td>
            <td class="align-middle text-xs font-weight-bold">{{ societe.adresse ?: 'N/A' }}</td>
            <td class="align-middle text-center text-xs font-weight-bold">
                {{ societe.telephone ?: 'N/A' }}
            </td>
            <td class="align-middle text-center text-xs font-weight-bold">
                <span class="badge bg-gradient-success">{{ societe.affectations|length }}</span>
            </td>
            <td class="align-middle text-center">
                <div class="common-align gap-2 justify-content-start">
                    <a href="{{ path('societe_service_show', { 'id': societe.id }) }}"
                       title="Plus de details">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a class="square-white" title="Modifier"
                       href="{{ path('societe_service_edit', { 'id': societe.id }) }}">
                        <i class="far fa-edit"></i>
                    </a>
                    <form action="{{ path('societe_service_delete', { 'id': societe.id }) }}" method="POST"
                          class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ societe.id) }}">
                        <a type="submit"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce poste ?');"
                           title="Supprimer le type de materiel">

                            <i class="fa fa-trash"></i>


                        </a>
                    </form>


                </div>

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="text-center text-secondary">Aucune société de service trouvée.</td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}
{% block pagination %}
    <!-- Pagination -->
    {% if pagination.getTotalItemCount() > 10 %}
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                {% if pagination.currentPageNumber > 1 %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path('employes_index', {'page': pagination.currentPageNumber - 1}) }}">
                            <span class="material-symbols-rounded">keyboard_arrow_left</span>
                        </a>
                    </li>
                {% endif %}

                {% for page in 1..pagination.pageCount %}
                    <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                        <a class="page-link" href="{{ path('employes_index', {'page': page}) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if pagination.currentPageNumber < pagination.pageCount %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path('employes_index', {'page': pagination.currentPageNumber + 1}) }}">
                            <span class="material-symbols-rounded">keyboard_arrow_right</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
