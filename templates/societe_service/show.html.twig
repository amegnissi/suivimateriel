{% extends 'baseC.html.twig' %}

{% block title %}Société de Service{% endblock %}
{% block breadcrumb %}Société de Service{% endblock %}
{% block  breadcrumb_item %} Société de Service{% endblock %}
{% block  breadcrumb_t %} Détails de la Société{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10 offset-sm-1">
            <div class="card list-with-icon">
                <div class="card-header border-b-5 border-l-primary">
                    <h6>Détails de la Société</h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive table-card mb-4">
                        <table class="table  table-centered align-middle table-nowrap mb-0">
                            <thead class="text-muted table-light">
                            <tbody>
                            <tr>
                                <th> Nom : </th>
                                <td> {{ societe.nom }} </td>
                            </tr>
                            <tr>
                                <th> IFU:</th>
                                <td> {{ societe.ifu }} </td>
                            </tr>
                            <tr>
                                <th> Gérant :</th>
                                <td> {{ societe.gerant }} </td>
                            </tr>
                            <tr>
                                <th> Adresse :</th>
                                <td> {{ societe.adresse }} </td>
                            </tr>
                            <tr>
                                <th> Téléphone :</th>
                                <td> {{ societe.telephone }} </td>
                            </tr>
                            <tr>
                                <th> Email: </th>
                                <td> {{ societe.email }} </td>
                            </tr>
                            <tr>
                                <th> Site Web:</th>
                                <td>  {{ societe.siteWeb }} </td>
                            </tr>

                            </tbody>
                        </table><!-- end table -->

                    </div>
                    <div class="col-12">
                        <div class="common-flex d-grid gap-2 d-md-flex justify-content-md-end buttons-box">
                            <a href="{{ path('societe_service_edit', { 'id': societe.id }) }}" class="btn btn-outline-success
                            btn-sm b-r-6">
                                <i class="fa-solid fa-check"></i>
                                Modifier
                            </a>

                            <a href="{{ path('societe_service_index') }}" class="btn btn-outline-dark b-r-8">
                                <i class="fa-solid fa-arrow-left"></i>
                                Retour</a>

                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>

{% endblock %}
