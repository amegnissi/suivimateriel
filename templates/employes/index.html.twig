{% extends 'base_table.html.twig' %}
{% block title %}Employés{% endblock %}
{% block breadcrumb %}EMPLOYES{% endblock %}
{% block  breadcrumb_item %} Employés{% endblock %}
{% block  breadcrumb_t %} Gestion des Employés{% endblock %}
{% block table_titre %}Liste des Employés{% endblock %}
{% block btntitle %}Ajouter un Employé{% endblock %}
{% block otherbtn %}
    <a href="{{ path('employes_export_pdf') }}" class="btn btn-danger">Exporter en PDF</a>
    <a href="{{ path('employes_export_excel') }}" class="btn btn-success">Exporter en Excel</a>
{% endblock %}
{% block btnpath %}{{ path('employes_create') }}{% endblock %}
{% block tableContent %}
    <thead>
    <tr>
        <th class="col">N°</th>
        <th class="col">Employés</th>
        <th class="col">Prénom</th>
        <th class="col">Poste</th>
        <th class="col">Tel Corporate</th>
        <th class="col">Statut</th>
        <th class="col">Actions</th>
    </thead>
    <tbody>

    {% for employe in pagination %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ employe.nom }}</td>
            <td>{{ employe.prenom }}</td>
            <td>{{ employe.poste ? employe.poste.libelle : 'Non défini' }}</td>
            <td>
                {{ employe.telephoneCorporate ?: 'N/A' }}
            </td>
            <td class="align-middle text-center">
                {% if employe.affectations is empty %}
                    <span class="badge bg-secondary">⏳ Non Affecté</span>
                {% else %}
                    <span class="badge bg-info">✅ Affecté</span>
                {% endif %}
            </td>
            <td class="align-middle text-center">
                <div class="common-align gap-2 justify-content-start">
                    <a class="btn btn-primary btn-sm" href="{{ path('employes_show', {'id': employe.id}) }}"
                       title="Plus de details">
                        <i class="fa fa-eye"></i>
                    </a>


                    <a class="btn btn-success btn-sm" href="{{ path('employes_edit', {'id': employe.id}) }}"
                       title="Plus de details">
                        <i class="far fa-edit"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7" class="text-center text-secondary">Aucun employé trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}

