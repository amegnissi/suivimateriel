{% extends 'base.html.twig' %}

{% block title %}Retour du Matériel{% endblock %}

{% block breadcrumb %}MATÉRIEL > SORTIES > RETOUR{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h4>Retour du Matériel</h4>

        <div class="card my-4">
            <div class="card-body">
                <p><strong>Matériel :</strong> {{ sortie.materiel.marque.libelle ~ ' - ' ~ sortie.materiel.immatriculation }}</p>
                <p><strong>Date de sortie :</strong> {{ sortie.dateSortie|date('d-m-Y') }}</p>

                {{ form_start(form) }}

                <div class="input-group input-group-static mb-4">
                    {{ form_label(form.dateRetour, 'Date de Retour', {'label_attr': {'class': 'ms-0'} }) }}
                    {{ form_widget(form.dateRetour, {'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.dateRetour) }}
                </div>

                <div class="input-group input-group-static mb-4">
                    {{ form_label(form.etatRetour, 'État au Retour', {'label_attr': {'class': 'ms-0'} }) }}
                    {{ form_widget(form.etatRetour, {'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.etatRetour) }}
                </div>

                <button class="btn btn-success">Valider le Retour</button>
                <a href="{{ path('sortie_materiels_index') }}" class="btn btn-secondary">Annuler</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
