{% extends 'base.html.twig' %}

{% block title %}Matériels{% endblock %}

{% block breadcrumb %}MATERIELS{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Gestion des Matériels</h4>
                <a href="{{ path('materiels_create') }}" class="btn btn-primary">Ajouter un Matériel</a>
            </div>

            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Liste des Matériels</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">N°</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Libellé</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Marque</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date d'Acquisition</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for materiel in materiels %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ materiel.libelle }}</td>
                                    <td>{{ materiel.type.libelle ?? 'N/A' }}</td>
                                    <td>{{ materiel.marque.libelle ?? 'N/A' }}</td>
                                    <td>{{ materiel.dateAcquisition|date('d-m-Y') }}</td>
                                    <td>
                                        {% if materiel.statut == 0 %}
                                            <span class="badge bg-gradient-secondary">Non Affecté</span>
                                        {% elseif materiel.statut == 1 %}
                                            <span class="badge bg-gradient-success">Affecté</span>
                                        {% elseif materiel.statut == 2 %}
                                            <span class="badge bg-gradient-warning">En Maintenance</span>
                                        {% elseif materiel.statut == 3 %}
                                            <span class="badge bg-gradient-danger">Hors Service</span>
                                        {% endif %}
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('materiels_show', {'id': materiel.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                        <a href="{{ path('materiels_edit', {'id': materiel.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">Aucun matériel trouvé.</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}