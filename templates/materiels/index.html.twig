{% extends 'base_table.html.twig' %}

{% block title %}Materiels{% endblock %}

{% block breadcrumb %}Materiels{% endblock %}
{% block  breadcrumb_item %}Gestion du materiel{% endblock %}
{% block  breadcrumb_t %} Liste des materiels{% endblock %}
{% block table_titre %}Liste des  materiels {% endblock %}
 {% block btntitle %}Ajouter un Mat√©riel{% endblock %}
{% block btnpath %}{{ path('materiels_create') }}{% endblock %}
{% block tableContent %}
    <thead>
    <tr>
        <th class="col">N¬∞</th>
        <th class="col">Type de Mat√©riel</th>
        <th class="col">Marque</th>
        <th class="col">Immatriculation</th>
        <th class="col">Date d'Acquisition</th>
        <th class="col">Statut</th>
        <th class="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for materiel in pagination %}
        <tr>
            <td class="align-middle text-center text-xs font-weight-bold">{{ loop.index }}</td>
            <td class="align-middle text-xs font-weight-bold">{{ materiel.type.libelle ?? 'Non D√©fini' }}</td>
            <td class="align-middle text-xs font-weight-bold">{{ materiel.marque.libelle ?? 'Non D√©fini' }}</td>
            <td class="align-middle text-xs font-weight-bold">{{ materiel.immatriculation }}</td>
            <td class="align-middle text-center text-xs font-weight-bold">
                {{ materiel.dateAcquisition|date('d-m-Y') }}
            </td>
            <td class="align-middle text-center">
                {% if materiel.statut == 0 %}
                    <span class="badge bg-secondary">‚è≥ Non Affect√© (NA)</span>
                {% elseif materiel.statut == 1 %}
                    <span class="badge bg-info">‚úÖ Affect√© (A)</span>
                {% elseif materiel.statut == 3 %}
                    <span class="badge bg-warning text-dark">üîß NA / En Maintenance</span>
                {% elseif materiel.statut == 2 %}
                    <span class="badge bg-success">üîß A / En Maintenance</span>
                {% endif %}
            </td>
            <td class="align-middle text-center">
                <div class="common-align gap-2 justify-content-start">
                    <a href="{{ path('materiels_show', {'id': materiel.id}) }}"
                       title="Plus de details">
                        <i class="fa fa-eye"></i>
                    </a>

                    <a href="{{ path('materiels_edit', {'id': materiel.id}) }}"
                       title="Modifier">
                        <i class="far fa-edit"></i>
                    </a>
                </div>
{#                <a href="{{ path('materiels_show', {'id': materiel.id}) }}" class="btn btn-info btn-sm">Voir</a>#}
{#                <a href="{{ path('materiels_edit', {'id': materiel.id}) }}" class="btn btn-warning btn-sm">Modifier</a>#}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7" class="text-center text-secondary">Aucun mat√©riel trouv√©.</td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}
{% block pagination %}
    <!-- Pagination -->
    {% if pagination.getTotalItemCount() > 10 %}
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                {% if pagination.currentPageNumber > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('employes_index', {'page': pagination.currentPageNumber - 1}) }}">
                            <span class="material-symbols-rounded">keyboard_arrow_left</span>
                        </a>
                    </li>
                {% endif %}

                {% for page in 1..pagination.pageCount %}
                    <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                        <a class="page-link" href="{{ path('employes_index', {'page': page}) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if pagination.currentPageNumber < pagination.pageCount %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('employes_index', {'page': pagination.currentPageNumber + 1}) }}">
                            <span class="material-symbols-rounded">keyboard_arrow_right</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
