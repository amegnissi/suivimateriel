{% extends 'base.html.twig' %}

{% block title %}Affectations{% endblock %}

{% block breadcrumb %}AFFECTATIONS{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Gestion des Affectations</h4>
                <a href="{{ path('affectations_create') }}" class="btn btn-primary">Ajouter une Affectation</a>
            </div>

            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Liste des Affectations</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">N°</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Matériel</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Société</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Employé</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date d'Affectation</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for affectation in affectations %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ affectation.materiel.libelle }}</td>
                                    <td>{{ affectation.societe.nom }}</td>
                                    <td>{{ affectation.employe.prenom }} {{ affectation.employe.nom }}</td>
                                    <td>{{ affectation.dateAffectation|date('d-m-Y') }}</td>
                                    <td>
                                        <a href="{{ path('affectations_show', {'id': affectation.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                        <form action="{{ path('affectations_delete', { 'id': affectation.id }) }}" method="POST" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affectation.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette affectation ?');">
                                                Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucune affectation trouvée.</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
{% endblock %}