{% extends 'base.html.twig' %}

{% block title %}Maintenances{% endblock %}

{% block breadcrumb %}MAINTENANCES{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Gestion des Maintenances</h4>
                <a href="{{ path('maintenances_create') }}" class="btn btn-primary">Ajouter une Maintenance</a>
            </div>

            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Liste des Maintenances</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">N°</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Matériel</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Employé</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date d'Intervention</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Coût (FCFA)</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for maintenance in maintenances %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ maintenance.affectation.materiel.libelle }}</td>
                                    <td>{{ maintenance.affectation.employe.prenom }} {{ maintenance.affectation.employe.nom }}</td>
                                    <td>{{ maintenance.typeMainteance }}</td>
                                    <td>{{ maintenance.dateIntervention|date('d-m-Y') }}</td>
                                    <td>{{ maintenance.cout ?: '-' }}</td>
                                    <td>
                                        <a href="{{ path('maintenances_show', {'id': maintenance.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">Aucune maintenance trouvée.</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}